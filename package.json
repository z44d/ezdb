{
  "name": "nosql",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "check": "biome check . --write --unsafe",
    "start": "bun run src/index.ts",
    "build": "tsc",
    "cli": "bun run cli.ts",
    "init:db": "bun db:generate && bun db:migrate",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "latest",
    "@types/msgpack-lite": "^0.1.12",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "msgpack-lite": "^0.1.26"
  }
}
